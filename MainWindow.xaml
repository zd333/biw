<Window x:Uid="Window_1" x:Class="Bulk_Image_Watermark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bulk image watermark" Height="600" Width="800">
    <Window.Resources>
        <Style x:Uid="Style_1" TargetType="Button">
            <Setter x:Uid="Setter_1" Property="BorderBrush" Value="Green"/>
        </Style>
    </Window.Resources>
    
    <DockPanel x:Uid="DockPanel_1" LastChildFill="True">
        <TabControl x:Uid="TabControl_1" DockPanel.Dock="Top" VerticalAlignment="Top" Height="150">
            <TabItem x:Uid="TabItem_1" Header="Paths">
                <StackPanel x:Uid="StackPanel_1" Orientation="Vertical">
                    <DockPanel x:Uid="DockPanel_2" LastChildFill="True">
                        <Label x:Uid="Label_1" Content="Sourcepath}\" DockPanel.Dock="Left"/>
                        <Button x:Uid="buttonSelectSourcePath" Name="buttonSelectSourcePath" Content="..." DockPanel.Dock="Right" Width="40"/>
                        <TextBox x:Uid="textBoxSourcePath" Name="textBoxSourcePath"/>
                    </DockPanel>
                    <CheckBox x:Uid="checkBoxUseSubdirectories" Name="checkBoxUseSubdirectories"  Content="Process files in subdirectories"/>
                    <CheckBox x:Uid="checkBoxOverwriteSourceFiles" Name="checkBoxOverwriteSourceFiles"  Content="Overwrite source files" Foreground="Red"/>
                    <DockPanel x:Uid="DockPanel_3" LastChildFill="True" IsEnabled="{Binding ElementName=checkBoxOverwriteSourceFiles, Path=IsChecked}">
                        <Label x:Uid="Label_2" Content="Destination path" DockPanel.Dock="Left"/>
                        <Button x:Uid="buttonSelectDestinationPath" Name="buttonSelectDestinationPath" Content="..." DockPanel.Dock="Right" Width="40"/>
                        <TextBox x:Uid="textBoxDestinationPath" Name="textBoxDestinationPath"/>
                    </DockPanel>
                </StackPanel>
            </TabItem>
            <TabItem x:Uid="TabItem_2" Header="Add watermarks">
            </TabItem>
            <TabItem x:Uid="TabItem_3" Header="Edit added watermark">
            </TabItem>
            <TabItem x:Uid="TabItem_4" Header="Save settings">
                <StackPanel x:Uid="StackPanel_2" Orientation="Vertical">
                    <StackPanel x:Uid="StackPanel_3" Orientation="Horizontal">
                        <CheckBox x:Uid="checkBoxResizeResults" Name="checkBoxResizeResults"  Content="Change result files resolution"/>
                        <ComboBox x:Uid="comboBoxResultResolution" Name="comboBoxResultResolution" IsEnabled="{Binding ElementName=checkBoxResizeResults, Path=IsChecked}">
                            <ComboBoxItem x:Uid="comboBoxItem320" Name="comboBoxItem320" Content="320*240"/>
                            <ComboBoxItem x:Uid="comboBoxItem640" Name="comboBoxItem640" Content="640*480"/>
                            <ComboBoxItem x:Uid="comboBoxItem1024" Name="comboBoxItem1024" Content="1024*768" IsSelected="True"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel  x:Uid="StackPanel_4" Orientation="Horizontal">
                        <CheckBox x:Uid="checkBoxChangeResultsFormat" Name="checkBoxChangeResultsFormat"  Content="Change result file type"/>
                        <ComboBox x:Uid="comboBoxResultsFormat" Name="comboBoxResultsFormat" IsEnabled="{Binding ElementName=checkBoxChangeResultsFormat, Path=IsChecked}">
                            <ComboBoxItem x:Uid="comboBoxItemJPG" Name="comboBoxItemJPG" Content="jpg" IsSelected="True"/>
                            <ComboBoxItem x:Uid="comboBoxItemPNG" Name="comboBoxItemPNG" Content="png"/>
                            <ComboBoxItem x:Uid="comboBoxItemBMP" Name="comboBoxItemBMP" Content="bmp"/>
                        </ComboBox>
                    </StackPanel>
                    <DockPanel x:Uid="DockPanel_4" LastChildFill="True">
                        <Button x:Uid="buttonSave" Name="buttonSave" Content="Save results" DockPanel.Dock="Left"/>
                        <Label x:Uid="labelSaveMessage" Name="labelSaveMessage" Foreground="Red" Content="Test save message. Dont forget to remove."/>
                    </DockPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
        <ListBox x:Uid="listBoxPreview" Name="listBoxPreview" Width="100"/>
        <Canvas x:Uid="Canvas_1" Background="Beige"/>
    </DockPanel>
</Window>
